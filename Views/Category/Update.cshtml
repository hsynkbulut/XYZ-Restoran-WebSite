@using OnlineRestaurantProject.Models.DTO
@model CreateOrEditCategoryDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        Kategori Güncelleme Sayfası
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Update", "Category", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.Id)
            <div class="text-danger" asp-validation-summary="All">
            </div>
            <div class="my-3">
                <label class="form-label" for="Ad">Ad</label>

                @Html.TextBoxFor(x => x.CategoryName, "", new { @class = "form-control", placeHolder = "Kategori adını giriniz" })

            </div>

            <button type="submit" class="btn btn-success my-3">
                Güncelle
            </button>
        }
    </div>
</div>

